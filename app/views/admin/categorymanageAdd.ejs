<%- include('../shared/admin/header') %>
    <div class="wrapper">
        <%- include('../shared/admin/navbarTop') %>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header"><%=title%></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="form-wrap col-lg-12">
                        <form id="create_topic_form" action="/admin/categorymanage/save" method="post">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label for="name" class="col-md-1 control-label">分类名称</label>
                                    <div class="col-md-5">
                                        <% if (category._id) { %>
                                            <input type="text"
                                                class="form-control"
                                                name="categoryname"
                                                id="name"
                                                placeholder="请输入分类名称"
                                                value="<%=category.name%>" />
                                        <% } else { %>
                                            <input type="text"
                                                class="form-control"
                                                name="categoryname"
                                                id="name"
                                                placeholder="请输入分类名称"
                                                value="" />
                                        <% } %>
                                    </div>
                                </div>
                                <% if(category._id){%>
                                    <input type="hidden" name="_id" value="<%=category._id%>">
                                <%}%>
                                <div class="form-group">
                                    <div class="col-sm-offset-1 col-sm-5">
                                        <button type="submit" class="btn btn-default btn-primary">提交</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </div>
    <%- include('../shared/admin/common') %>
    <%- include('../shared/admin/footer') %>