<%- include('../shared/admin/header') %>
    <div class="wrapper">
        <%- include('../shared/admin/navbarTop') %>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">分类管理</h1>
                        <div class="page-header-right">
                            <a class="btn btn-primary" href="/admin/categorymanage/add">
                                <i class="fa fa-plus fa-fw"></i>
                                <span>添加分类</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="table-wrap col-lg-12">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>分类ID</th>
                                    <th>分类名称</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categorys.forEach(function(item) {%>
                                <tr>
                                    <td><%=item._id%></td>
                                    <td><%=item.name%></td>
                                    <td>
                                        <a class="opear" href="/admin/categorymanage/update/<%=item._id%>">修改名称</a>
                                        <!-- <a class="opear" href="#/product/save/26">编辑</a> -->
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>
    <%- include('../shared/admin/common') %>
    <%- include('../shared/admin/footer') %>