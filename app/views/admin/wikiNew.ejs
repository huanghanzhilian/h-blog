<%- include('../shared/admin/header') %>
<div class="wrapper">
    <%- include('../shared/admin/navbarTop') %>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%=title%></h1>
                <!-- <div class="page-header-right">
                    <a class="btn btn-primary" href="#/product.category/add">
                        <i class="fa fa-plus fa-fw"></i>
                        <span>添加品类</span>
                    </a>
                </div> -->
            </div>
        </div>
        <div class="row">
            <div class="form-wrap col-lg-12">
                <form id="create_topic_form" action="/admin/wiki/save" method="post" enctype="multipart/form-data">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="name" class="col-md-1 control-label">书单名称</label>
                            <div class="col-md-5">
                                <% if (wiki._id) { %>
                                    <input type="text"
                                        class="form-control"
                                        name="wiki[title]"
                                        id="name"
                                        placeholder="请输入书单名称"
                                        value="<%=wiki.title%>" />
                                <% } else { %>
                                    <input type="text"
                                        class="form-control"
                                        name="wiki[title]"
                                        id="name"
                                        placeholder="请输入书单名称"
                                        value="" />
                                <% } %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-md-1 control-label">书单封面</label>
                            <div class="col-md-5">
                                <input type="file" name="fileupload" id="fileupload" class="fileupload" />
                            </div>
                        </div>
                        
                        <% if(wiki._id){%>
                            <input type="hidden" name="wiki[_id]" value="<%=wiki._id%>">
                        <%}%>

                        
                        <div class="form-group">
                            <label class="col-md-1 control-label">书单内容</label>
                            <div id="editormd" class="col-md-10">
                                <div id="editor">
                                    <textarea name="wiki[content]" style="display:none;"><%=wiki.content%></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-5">
                                <button type="submit" class="btn btn-default btn-primary">提交</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../shared/admin/common') %>
<link rel="stylesheet" href="/libs/editor.md/css/editormd.min.css" />
<script src="/libs/editor.md/editormd.min.js"></script>
<script type="text/javascript">
    $(function() {
        var editor = editormd("editor", {
            width: "100%",
            height: "100%",
            // markdown: "xxxx",     // dynamic set Markdown text
            path : "/libs/editor.md/lib/",
            imageUpload : true, //必须
            imageFormats : ["jpg", "jpeg", "gif", "png", "bmp", "webp"],
            imageUploadURL : "/uploadImg", //必须
            onload : function() {
                initPasteDragImg(this); //必须
            }
        });
    });
</script>
<%- include('../shared/admin/footer') %>
